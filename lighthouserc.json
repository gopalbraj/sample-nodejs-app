{
  "ci": {
    "ignoreDuplicateBuildFailure": true,
    "collect": {
      "settings": {
        "outputPath": "reports/report.json",
        "output": "json",
        "chromeFlags": "--no-sandbox --headless"
      },
      "url": [
        "https://verizon-nextjs-sandbox-default.glb.edgio.link/ngd/blueprint/smartphones"
      ],
      "startServerCommand": "echo 'Server Started listening'",
      "numberOfRuns": 1
    },
    "assert": {
      "budgetsFile": "lighthouse/budget.json"
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "lighthouse",
      "reportFilenamePattern": "reports"
    }
  }
}
